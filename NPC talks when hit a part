

local Ready = true
local CC = Enum.ChatColor.White
local h = hit.Parent:FindFirstChild("Humanoid")
if h ~= nil and Ready = true then
Ready = false
local plyr = game.Players:FindFirstChild(h.Parent.Name)
local c = Chat:Clone()
